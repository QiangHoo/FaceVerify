<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VechileActivity">

    <TextView
        android:id="@+id/tv_safe"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="30sp"
        android:gravity="center"
        android:text="@string/safe_detection"
        android:textColor="@color/dashboard_progress_color_blue"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/tire_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/tv_safe"
        android:layout_marginStart="15dp">

        <TextView
            android:id="@+id/tire_tv"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/tire_text"
            android:background="@drawable/bakground_drawable"
            android:textColor="#ffffff"
            android:visibility="gone" />

        <com.arcsoft.arcfacedemo.loadtoast.LoadToastView
            android:id="@+id/tire_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/light_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tire_ll"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/light_tv"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@drawable/bakground_drawable"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="@string/light_text"
            android:visibility="gone" />

        <com.arcsoft.arcfacedemo.loadtoast.LoadToastView
            android:id="@+id/light_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/oir_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/light_ll"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/oir_tv"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@drawable/bakground_drawable"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="@string/oil_text"
            android:visibility="gone" />

        <com.arcsoft.arcfacedemo.loadtoast.LoadToastView
            android:id="@+id/oir_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/seat_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/oir_ll"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/seat_tv"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/seat_text"
            android:background="@drawable/bakground_drawable"
            android:textColor="#ffffff"
            android:visibility="gone" />

        <com.arcsoft.arcfacedemo.loadtoast.LoadToastView
            android:id="@+id/seat_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/door_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/seat_ll"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/door_tv"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/door_text"
            android:background="@drawable/bakground_drawable"
            android:textColor="#ffffff"
            android:visibility="gone" />

        <com.arcsoft.arcfacedemo.loadtoast.LoadToastView
            android:id="@+id/door_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp" />

    </LinearLayout>


</RelativeLayout>
